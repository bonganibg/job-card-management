@model DomingoRoofWork.Models.InvoiceModel

@{
    ViewBag.Title = "Invoice Details";
}
<div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12 padding">
    <div class="card">
        <div class="card-header p-4">
            <div class="float-right">
                <h3 class="mb-0">Invoice</h3>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-sm-6">
                    <h5 class="mb-3"> <strong class="text-dark">Job Card No. : </strong> @Html.DisplayFor(model => model.JobCardNumber)</h5>
                    <div><strong class="text-dark"> Customer : </strong> : @Html.DisplayFor(model => model.CustomerFirstName) @Html.DisplayFor(model => model.CustomerSurname)</div>
                    <div>
                        <strong class="text-dark"> Address : </strong>: @Html.DisplayFor(model => model.PhysicalAddress), @Html.DisplayFor(model => model.Province),
                        @Html.DisplayFor(model => model.Code)
                    </div>
                </div>
                <div class="col-sm-6 ">
                    <h5 class="mb-3"> <strong class="text-dark">  @Html.DisplayNameFor(model => model.JobType): </strong> : @Html.DisplayFor(model => model.JobType)</h5>
                    <div><strong class="text-dark"> @Html.DisplayNameFor(model => model.Employees) : </strong> : @Html.DisplayFor(model => model.Employees)</div>
                    <div><strong class="text-dark">  @Html.DisplayNameFor(model => model.Materials): </strong> : @Html.DisplayFor(model => model.Materials)</div>
                </div>
            </div>
            <div class="table-responsive-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="center">@Html.DisplayNameFor(model => model.JobType)</th>
                            <th>@Html.DisplayNameFor(model => model.DailyRate)</th>
                            <th class="right">@Html.DisplayNameFor(model => model.NoOfDays)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="center">@Html.DisplayFor(model => model.JobType)</td>
                            <td class="left strong">@Html.DisplayFor(model => model.DailyRate)</td>
                            <td class="left">@Html.DisplayFor(model => model.NoOfDays)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-lg-4 col-sm-5">
                </div>
                <div class="col-lg-4 col-sm-5 ml-auto">
                    <table class="table table-clear">
                        <tbody>
                            <tr>
                                <td class="left">
                                    <strong class="text-dark">Subtotal</strong>
                                </td>
                                <td class="right"> @Html.DisplayFor(model => model.Subtotal)</td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong class="text-dark">VAT (14%)</strong>
                                </td>
                                <td class="right"> @Html.DisplayFor(model => model.Vat) </td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong class="text-dark">Total</strong>
                                </td>
                                <td class="right">
                                    <strong class="text-dark"> @Html.DisplayFor(model => model.Total) </strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Back to List", "GetAllInvoices")
</p>
